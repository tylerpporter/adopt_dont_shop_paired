<section class = "info">
  <h1>Edit Review</h1>

  <%= form_tag "/shelters/#{@review.shelter_id}/#{@review.id}", method: :patch do %>
    <%= label_tag :title %>
    <%= text_field_tag :title, @review.title %>
    <br />
    <%= label_tag "rating" %>
    <br />
    <%= radio_button_tag :rating, '1' , :checked => true %> 1
    <%= radio_button_tag :rating, '2' %> 2
    <%= radio_button_tag :rating, '3' %> 3
    <%= radio_button_tag :rating, '4' %> 4
    <%= radio_button_tag :rating, '5' %> 5
    <br />
    <%= label_tag :content %>
    <%= text_field_tag :content, @review.content %>
    <br />
    <%= label_tag :picture %>
    <%= text_field_tag :picture, @review.picture %>
    <br />
    <%= submit_tag "Update Review" %>
  <% end %>

</section>
