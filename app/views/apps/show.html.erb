<section class="info">
  <p>Name: <%= @app.name %></p>
  <p>Address: <%= @app.address %></p>
  <p>City: <%= @app.city %></p>
  <p>State: <%= @app.state %></p>
  <p>Zip: <%= @app.zip %></p>
  <p>Phone Number: <%= @app.phone_number %></p>
  <p>Description: <%= @app.description %></p>
  <% @app.pets.each do |pet| %>
    <p>Pets to Adopt: <%= link_to "#{pet.name}", "/pets/#{pet.id}" %></p>
  <% end %>
</section>
