<section class = "info">

  <h1>All Pets</h1>

  <%= link_to "Show All", "pets" %> |
  <%= link_to "Show Adoptable", "?adoptable=true" %> |
  <%= link_to "Show Pending", "?adoptable=false" %>
  <section class = "all-pets">
    <% @pets.each do |pet| %>
    <section class = "pet-info">
      <h2><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h2>
      <%= image_tag "#{pet.image}" %>
      <p>Age:</p>
      <p><%= pet.approx_age %> Years (Approx.)</p>
      <p>Sex: </p>
      <p><%= pet.sex %></p>
      <p>Shelter:
      <p><%= link_to "#{pet.shelter.name}", "/shelters/#{pet.shelter.id}" %></p>
      <%= link_to "Edit", "/pets/#{pet.id}/edit", class: "button" %>
      <%= link_to "Delete", "/pets/#{pet.id}/", method: "delete", id: "pet-#{pet.id}", class: "button delete" %>
    </section>
    <% end %>
  </section>

</section>