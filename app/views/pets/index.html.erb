<section class = "info">

  <h1>All Pets</h1>

  <%= link_to "Show All", "pets" %> |
  <%= link_to "Show Adoptable", "?adoptable=true" %> |
  <%= link_to "Show Pending", "?adoptable=false" %>

  <section class = "all-pets">

    <% @pets.each do |pet| %>

    <section class = "pet-info">
      <h2><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h2>
      <%= image_tag "#{pet.image}" %>
      <p><strong>Age: </strong><%= pet.approx_age %> Years (Approx.)</p>
      <p><strong>Sex: </strong><%= pet.sex %></p>
      <p><strong>Shelter: </strong><%= link_to "#{pet.shelter.name}", "/shelters/#{pet.shelter.id}" %></p>
      <br  />
      <section id = "pet-<%= "#{pet.id}" %>">
        <%= link_to "Edit", "/pets/#{pet.id}/edit" %> | 
        <%= link_to "Delete", "/pets/#{pet.id}/", method: "delete" %>
      </section>
    </section>

    <% end %>

  </section>

</section>